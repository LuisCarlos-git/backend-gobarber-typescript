{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",

    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "@typescript-eslint/interface-nam-prefix": [
      "error",
      { "prefixWithI": "always" }
    ],
    "prettier/prettier": "error",
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
